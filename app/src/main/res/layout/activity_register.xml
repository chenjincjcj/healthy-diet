<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zhuce"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/back"
        app:iconTint="@null"
        android:backgroundTint="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="注册界面"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="italic" />
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="#323131"
            android:textSize="25dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edit_diyname"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="起个响亮的名字吧"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高"
            android:textColor="#323131"
            android:textSize="25dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edit_shengao"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的姓名"/>


    </LinearLayout>
    <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体重"
        android:textColor="#323131"
        android:textSize="25dp"
        android:textStyle="normal"/>
    <EditText
        android:id="@+id/edit_tizhong"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入你的爱好"
        />


</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄："
            android:textColor="#323131"
            android:textSize="25dp"
            android:textStyle="normal"/>
        <EditText
            android:id="@+id/edit_age"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的年龄"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="#323131"
            android:textSize="25dp"
            android:textStyle="normal"/>
        <EditText
            android:id="@+id/edit_phone"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的手机号"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="#323131"
            android:textSize="25dp"
            android:textStyle="normal"/>
        <EditText
            android:id="@+id/edit_possword"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请设置你的密码"/>


    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择工作性质:"
        android:textSize="25dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<com.google.android.material.button.MaterialButton
    android:id="@+id/nei"
    android:layout_width="100dp"
    android:layout_height="40dp"
    app:cornerRadius="20dp"
    android:text="内勤工作者"
    android:textColor="@color/black"
    android:backgroundTint="@color/purple_200"
    app:singleSelection="true"
    />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/wai"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:cornerRadius="20dp"
            android:text="外勤工作者"
            android:textColor="@color/black"
            android:backgroundTint="@color/purple_200"
            app:singleSelection="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/lao"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            app:cornerRadius="20dp"
            android:text="劳动工作者"
            android:textColor="@color/black"
            android:backgroundTint="@color/purple_200"
            app:singleSelection="true"
            />

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
       android:id="@+id/button_finish"
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="完成注册"
        android:layout_gravity="center"
        android:textColor="@color/purple_200"
        android:backgroundTint="@color/white"/>

</LinearLayout>